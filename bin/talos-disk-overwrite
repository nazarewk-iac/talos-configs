#!/usr/bin/env bash
set -eEuo pipefail
test -z "${DEBUG:-}" || set -x
test -n "${PRJ_ROOT:-}" || eval "$(cd "${BASH_SOURCE[0]%/*}" && direnv export bash)"

disk="$1"
image="${2:-"default"}"
url="$(talos-image install "${image}")"
version="$(talos-cfg -r .talos.version)"
out="${PRJ_ROOT}/talos-${version}/${image}.metal-arm64.raw.xz"
test -e "$out" || curl --fail "${url}" -o "$out"
xz -d --stdout "$out" | sudo dd if=/dev/stdin conv=fsync bs=4M status=progress of="${disk}"
