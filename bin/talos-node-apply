#!/usr/bin/env bash
set -eEuo pipefail
test -z "${DEBUG:-}" || set -x
test -n "${PRJ_ROOT:-}" || eval "$(cd "${BASH_SOURCE[0]%/*}" && direnv export bash)"

nodes=()
args=()

while [[ $# -gt 0 ]]; do
  case "$1" in
  --check)
    mapfile -t -O "${#nodes[@]}" nodes < <(talos-cfg -r '.nodes|keys[]')
    args+=('--dry-run')
    ;;
  -*)
    args+=("$1")
    ;;
  '*')
    mapfile -t -O "${#nodes[@]}" nodes < <(talos-cfg -r '.nodes|keys[]')
    ;;
  *)
    nodes+=("$1")
    ;;
  esac
  shift
done

for node in "${nodes[@]}"; do
  . talosctl-node "$node" apply-config --file="${PRJ_CACHE_HOME}/talos/node-${node}.yaml" "${args[@]}"
done
